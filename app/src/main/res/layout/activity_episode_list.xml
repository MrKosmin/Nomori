<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171B1B"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191C1E"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <SearchView
            android:id="@+id/search_panel"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/search_background"
            android:searchIcon="@drawable/search" />

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="#191C1E"
            android:src="@drawable/add_button" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="#191C1E"
            android:src="@drawable/settings_button" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#191C1E"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/text_sorter_by"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Сортувати за:"
            android:textColor="#828282"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationY="2.3dp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/recently_added_sorter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#191C1E"
            android:src="@drawable/recently_added_sorter_indicator" />

        <ImageButton
            android:id="@+id/alphabet_sorter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#191C1E"
            android:src="@drawable/alphabet_sorter" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191C1E"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playlist_button"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#191C1E"
                android:padding="6dp"
                android:text="Name"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#C5C5C5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/three_dots_playlist"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#191C1E"
                android:src="@drawable/three_dots" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="#191C1E"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/playlists_button_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#191C1E"
            android:src="@drawable/playlists_button_indicator" />

        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="#191C1E"
            android:src="@drawable/history_button" />

    </LinearLayout>

</LinearLayout>
